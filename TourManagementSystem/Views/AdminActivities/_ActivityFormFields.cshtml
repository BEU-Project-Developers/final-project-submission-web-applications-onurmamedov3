@model TourManagementSystem.Models.AdminActivityViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" />
}

<fieldset class="mb-4">
    <legend class="form-legend">Activity Details</legend>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Activity Name</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-tag"></i></span>
            <input asp-for="Name" class="form-control admin-form-control" placeholder="e.g., City Walking Tour, Mountain Biking" />
        </div>
        <span asp-validation-for="Name" class="text-danger d-block mt-1"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-7">
            <label asp-for="Location" class="form-label">Location</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-map-marker"></i></span>
                <input asp-for="Location" class="form-control admin-form-control" placeholder="e.g., Central Park, Aspen Trails" />
            </div>
            <span asp-validation-for="Location" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Category" class="form-label">Category (Optional)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-sitemap"></i></span>
                <input asp-for="Category" class="form-control admin-form-control" placeholder="e.g., Sightseeing, Adventure, Cultural" />
            </div>
            <span asp-validation-for="Category" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset class="mb-4">
    <legend class="form-legend">Duration & Pricing</legend>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="DurationHours" class="form-label">Duration (Hours)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-hourglass-half"></i></span>
                <input asp-for="DurationHours" class="form-control admin-form-control" type="number" min="0" />
            </div>
            <span asp-validation-for="DurationHours" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-eur"></i></span> @* Or your currency icon *@
                <input asp-for="Price" class="form-control admin-form-control" type="number" step="0.01" min="0" />
            </div>
            <span asp-validation-for="Price" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend class="form-legend">Content & Management</legend>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description (Optional)</label>
        <textarea asp-for="Description" class="form-control admin-form-control" rows="4" placeholder="Detailed description of the activity..."></textarea>
        <span asp-validation-for="Description" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-image"></i></span>
            <input asp-for="ImageUrl" class="form-control admin-form-control" placeholder="e.g., /images/activities/biking.jpg" />
        </div>
        <span asp-validation-for="ImageUrl" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label">User ID (Optional)</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-user-plus"></i></span>
            <input asp-for="UserId" type="number" class="form-control admin-form-control" placeholder="Leave blank if not assigned" />
        </div>
        <span asp-validation-for="UserId" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>