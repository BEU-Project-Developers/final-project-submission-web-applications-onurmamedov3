@model TourManagementSystem.Models.AdminActivityViewModel
@{
    ViewData["Title"] = "Add New Activity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Assuming common styles for breadcrumb, form-container, form-title, buttons
   are defined in _AdminLayout.cshtml or a global admin.css file. *@

<nav aria-label="breadcrumb" class="breadcrumb-admin-custom">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Activities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Activity</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2 class="form-title-custom">
        <i class="fa fa-plus-circle"></i> Add New Activity
    </h2>

    <form asp-action="Create" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <partial name="_ActivityFormFields" model="Model" />

        <div class="form-actions-custom">
            <a asp-action="Index" class="btn btn-form-action btn-form-secondary">Cancel</a>
            <button type="submit" class="btn btn-form-action btn-form-primary">
                <i class="fa fa-save"></i> Create Activity
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}