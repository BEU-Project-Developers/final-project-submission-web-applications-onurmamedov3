@model TourManagementSystem.Models.AdminActivityViewModel
@{
    ViewData["Title"] = "Add New Activity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb" class="breadcrumb-admin">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Activities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Activity</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2><i class="fa fa-bicycle"></i> Add New Activity</h2>
    <hr />
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <partial name="_ActivityFormFields" model="Model" />
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Create Activity</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}