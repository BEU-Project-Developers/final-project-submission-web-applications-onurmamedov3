@model TourManagementSystem.Models.CarRental
@{
    ViewData["Title"] = "Confirm Delete Car Rental";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Assuming common styles are global *@

<nav aria-label="breadcrumb" class="breadcrumb-admin-custom">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Car Rentals</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Confirmation</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2 class="form-title-custom"><i class="fa fa-trash text-danger"></i> Delete Car Rental Confirmation</h2>

    <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>Are you sure?</h4>
        <p>You are about to permanently delete the car rental: <strong>@Model.CarModel</strong> by @Model.Company. This action cannot be undone.</p>
    </div>

    <div class="mt-4">
        <h4 class="mb-3">Car Rental Details:</h4>
        <dl class="row dl-horizontal-custom">
            <dt class="col-sm-4 col-md-3">Car Model:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.CarModel)</dd>

            <dt class="col-sm-4 col-md-3">Company:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Company)</dd>

            <dt class="col-sm-4 col-md-3">Location:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-4 col-md-3">Price per Day:</dt>
            <dd class="col-sm-8 col-md-9">@Model.PricePerDay.ToString("C")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-actions-custom">
                <a asp-action="Index" class="btn btn-form-action btn-form-secondary">Cancel</a>
                <button type="submit" class="btn btn-form-action btn-form-danger">
                    <i class="fa fa-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>