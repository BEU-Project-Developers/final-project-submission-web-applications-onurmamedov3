@* File: Views/AdminCars/Delete.cshtml *@
@model TourManagementSystem.Models.CarRental
@{
    ViewData["Title"] = "Confirm Delete Car Rental";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<nav aria-label="breadcrumb" class="breadcrumb-admin">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Car Rentals</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Confirmation</li>
    </ol>
</nav>
<div class="admin-form-container">
    <h2><i class="fa fa-trash"></i> Delete Car Rental Confirmation</h2>
    <hr />
    <div class="alert alert-danger"><h4 class="alert-heading">Are you sure you want to delete this?</h4><p>This action cannot be undone.</p></div>
    <div>
        <h4>@Model.CarModel</h4>
        <dl class="row mt-3">
            <dt class="col-sm-3">Company:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Company)</dd>
            <dt class="col-sm-3">Location:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>
            <dt class="col-sm-3">Price/Day:</dt>
            <dd class="col-sm-9">@Model.PricePerDay.ToString("C")</dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken() <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>