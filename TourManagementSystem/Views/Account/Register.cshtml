@model TourManagementSystem.Models.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up - VoyagePro";
    // This view will use _Layout.cshtml by default
}

@* Styles specific to this registration page *@
@section Styles {
    @* You can link to a specific auth_forms.css or keep styles inline *@
    <style>
        /* Ensure the page_hero content is pushed down below the fixed header */
        .page_hero {
            height: 350px;
            background-size: cover;
            background-position: center center;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            /* As with Login.cshtml, global padding for header offset should be in
                       _Layout.cshtml's main content area. If not, add padding-top here. */
        }

        .page_hero_content { /* Added for specific targeting of the content within hero */
            text-align: center;
            padding-top: 55px; /* Shift "Sign Up" text downward */
        }

            .page_hero_content h1 {
                font-size: 48px;
                color: #FFFFFF;
                font-weight: 700;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            }

        .form_section {
            padding-top: 60px;
            padding-bottom: 80px;
            background: #f3f6f9;
        }

        .form_container_vp {
            background: #FFFFFF;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0px 5px 20px rgba(0,0,0,0.1);
        }

            .form_container_vp h2 {
                font-size: 28px;
                color: #333;
                margin-bottom: 30px;
                font-weight: 700;
                text-align: center;
            }

            .form_container_vp .form-group label {
                font-weight: 600;
                color: #555;
            }

            .form_container_vp .form-control {
                height: 48px;
                border-radius: 5px;
                border: 1px solid #ddd;
                padding: 10px 15px;
            }

                .form_container_vp .form-control:focus {
                    border-color: #fa9e1b;
                    box-shadow: 0 0 0 0.2rem rgba(250, 158, 27, 0.25);
                }

        .form_submit_button_vp {
            width: 100%;
            height: 50px;
            background: #fa9e1b;
            color: #FFFFFF;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .form_submit_button_vp:hover {
                background: #e08604;
            }

        .switch_form_link_vp {
            margin-top: 25px;
            font-size: 15px;
            text-align: center;
        }

            .switch_form_link_vp a {
                color: #fa9e1b;
                text-decoration: none;
                font-weight: 600;
            }

                .switch_form_link_vp a:hover {
                    text-decoration: underline;
                }

        .back_to_home_link_vp {
            margin-top: 15px;
            display: block;
            text-align: center;
            font-size: 14px;
        }

        .text-danger {
            color: #dc3545 !important;
            font-size: 0.875em;
        }

        .validation-summary-errors ul {
            list-style-type: none;
            padding-left: 0;
        }
    </style>
}

@* No super_container, header, or menu divs needed here if using _Layout.cshtml *@

<!-- Page Hero -->
<div class="page_hero" style="background-image: url(@Url.Content("~/images/cta.jpg"));">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="page_hero_content">
                    @* Removed text-center, handled by CSS *@
                    <h1>Sign Up</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sign Up Form Section -->
<div class="form_section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="form_container_vp">
                    <h2>Create Your Account</h2>
                    <form asp-controller="Account" asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 validation-summary-errors"></div>

                        @* Assuming RegisterViewModel has FullName, if not, adjust to your properties like FirstName, LastName *@
                        <div class="form-group">
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="form_submit_button_vp">Sign Up</button>
                        <p class="switch_form_link_vp">
                            Already have an account? <a asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Login here</a>
                        </p>
                        <p class="back_to_home_link_vp">
                            <a asp-controller="Home" asp-action="Index">Back to Main Page</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Page-specific JavaScript for Register page if needed
    </script>
   
}

	
