@* File: Views/Account/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center" style="padding: 80px 15px;">
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">
        Sorry, you do not have permission to view this page.
    </p>
    <p>
        If you believe you should have access, please contact the site administrator.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return to Homepage</a>
    @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
    {
        <p class="mt-3">Or try going <a href="@ViewData["ReturnUrl"]">back to the previous page</a>.</p>
    }
</div>