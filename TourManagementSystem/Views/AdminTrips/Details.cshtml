@model TourManagementSystem.Models.AdminTripViewModel
@{
    ViewData["Title"] = "Trip Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var defaultTripImage = Url.Content("~/images/default_trip.jpg"); // Ensure this image exists or adjust path
}

<nav aria-label="breadcrumb" class="breadcrumb-admin">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Trips</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details: @Model.Title</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2><i class="fa fa-info-circle"></i> Trip Details: @Model.Title</h2>
    <hr />
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-5">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Title" class="img-fluid rounded shadow-sm mb-3"
                         onerror="this.onerror=null; this.src='@defaultTripImage';" />
                }
                else
                {
                    <img src="@defaultTripImage" alt="Default Trip Image" class="img-fluid rounded shadow-sm mb-3" />
                }
            </div>
            <div class="col-md-7">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Title:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-4">Destination:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Destination)</dd>

                    <dt class="col-sm-4">Duration:</dt>
                    <dd class="col-sm-8">@Model.DurationDays day(s)</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Managed By User ID:</dt>
                    <dd class="col-sm-8">@Model.UserId</dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="mt-3 pt-3 border-top">
                <h5>Description:</h5>
                <p class="text-break">@Html.Raw(Model.Description.Replace("\n", "<br />"))</p>
            </div>
        }
        <hr />
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Trip details not found.</div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    }
</div>