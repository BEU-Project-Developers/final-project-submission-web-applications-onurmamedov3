@model TourManagementSystem.Models.AdminTripViewModel

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" />
}

<div class="mb-3">
    <label asp-for="Title" class="form-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-md-7 mb-3">
        <label asp-for="Destination" class="form-label"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>
    <div class="col-md-5 mb-3">
        <label asp-for="DurationDays" class="form-label"></label>
        <input asp-for="DurationDays" class="form-control" type="number" min="1" />
        <span asp-validation-for="DurationDays" class="text-danger"></span>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ImageUrl" class="form-label"></label>
    <input asp-for="ImageUrl" class="form-control" placeholder="e.g., /images/trips/trip.jpg or http://..." />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="UserId" class="form-label"></label>
    <input asp-for="UserId" type="number" class="form-control" />
    <span asp-validation-for="UserId" class="text-danger"></span>
    <small class="form-text text-muted">ID of the user managing or creating this trip.</small>
</div>