@model TourManagementSystem.Models.AdminTripViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" />
}

<fieldset class="mb-4">
    <legend class="form-legend">Trip Information</legend>
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Package Title</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-header"></i></span>
            <input asp-for="Title" class="form-control admin-form-control" placeholder="e.g., Wonders of Rome, Alpine Adventure" />
        </div>
        <span asp-validation-for="Title" class="text-danger d-block mt-1"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-7">
            <label asp-for="Destination" class="form-label">Main Destination(s)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-map-marker"></i></span>
                <input asp-for="Destination" class="form-control admin-form-control" placeholder="e.g., Rome, Italy; Swiss Alps" />
            </div>
            <span asp-validation-for="Destination" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="DurationDays" class="form-label">Duration (Days)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                <input asp-for="DurationDays" class="form-control admin-form-control" type="number" min="1" />
            </div>
            <span asp-validation-for="DurationDays" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset class="mb-4">
    <legend class="form-legend">Content & Pricing</legend>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Total Price</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-eur"></i></span> @* Or your currency icon *@
            <input asp-for="Price" class="form-control admin-form-control" type="number" step="0.01" min="0" />
        </div>
        <span asp-validation-for="Price" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Full Description</label>
        <textarea asp-for="Description" class="form-control admin-form-control" rows="5" placeholder="Detailed itinerary, inclusions, exclusions..."></textarea>
        <span asp-validation-for="Description" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Cover Image URL</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-image"></i></span>
            <input asp-for="ImageUrl" class="form-control admin-form-control" placeholder="e.g., /images/trips/alpine-adventure.jpg" />
        </div>
        <span asp-validation-for="ImageUrl" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>

<fieldset>
    <legend class="form-legend">Management</legend>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Managed By User ID</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-user-plus"></i></span>
            <input asp-for="UserId" type="number" class="form-control admin-form-control" placeholder="ID of the user managing this trip" />
        </div>
        <span asp-validation-for="UserId" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>