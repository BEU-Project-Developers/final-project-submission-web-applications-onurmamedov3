@model TourManagementSystem.Models.AdminCruiseViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" />
}

<fieldset class="mb-4">
    <legend class="form-legend">Cruise Basics</legend>
    <div class="row g-3">
        <div class="col-md-7">
            <label asp-for="CruiseLine" class="form-label">Cruise Line</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-anchor"></i></span>
                <input asp-for="CruiseLine" class="form-control admin-form-control" placeholder="e.g., Royal Caribbean, Carnival" />
            </div>
            <span asp-validation-for="CruiseLine" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="DeparturePort" class="form-label">Departure Port</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-ship"></i></span>
                <input asp-for="DeparturePort" class="form-control admin-form-control" placeholder="e.g., Miami, FL" />
            </div>
            <span asp-validation-for="DeparturePort" class="text-danger d-block mt-1"></span>
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="Destination" class="form-label">Main Destination(s) / Region</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-globe"></i></span>
            <input asp-for="Destination" class="form-control admin-form-control" placeholder="e.g., Caribbean, Alaska, Mediterranean Ports" />
        </div>
        <span asp-validation-for="Destination" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>

<fieldset class="mb-4">
    <legend class="form-legend">Duration & Pricing</legend>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="DurationDays" class="form-label">Duration (Days)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-calendar-plus-o"></i></span>
                <input asp-for="DurationDays" class="form-control admin-form-control" type="number" min="1" />
            </div>
            <span asp-validation-for="DurationDays" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price (per person)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-eur"></i></span> @* Or your currency icon *@
                <input asp-for="Price" class="form-control admin-form-control" type="number" step="0.01" min="0" />
            </div>
            <span asp-validation-for="Price" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend class="form-legend">Additional Information</legend>
    <div class="mb-3">
        <label asp-for="ItinerarySummary" class="form-label">Itinerary Summary (Optional)</label>
        <textarea asp-for="ItinerarySummary" class="form-control admin-form-control" rows="3" placeholder="Brief summary, key ports of call, or highlights..."></textarea>
        <span asp-validation-for="ItinerarySummary" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Cover Image URL</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-image"></i></span>
            <input asp-for="ImageUrl" class="form-control admin-form-control" placeholder="e.g., /images/cruises/caribbean_cruise.jpg" />
        </div>
        <span asp-validation-for="ImageUrl" class="text-danger d-block mt-1"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label">Managed By User ID</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-user-plus"></i></span>
            <input asp-for="UserId" type="number" class="form-control admin-form-control" placeholder="ID of the user managing this cruise" />
        </div>
        <span asp-validation-for="UserId" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>