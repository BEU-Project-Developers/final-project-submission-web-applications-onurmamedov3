@model TourManagementSystem.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Management Console";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Assuming this is your admin layout

    // Define entityTypes without the count
    var entityTypes = new List<(string Title, string IconClass, string TargetId, string ControllerName)>
    {
        ("Hotels", "fa-bed", "hotelsSection", "AdminHotels"),
        ("Car Rentals", "fa-car", "carsSection", "AdminCars"),
        ("Flights", "fa-plane", "flightsSection", "AdminFlights"),
        ("Trips", "fa-map-signs", "tripsSection", "AdminTrips"),
        ("Cruises", "fa-ship", "cruisesSection", "AdminCruises"),
        ("Activities", "fa-bicycle", "activitiesSection", "AdminActivities")
    };

    // More distinct gradients, flowing right-to-left
    var gradientColors = new List<string>
    {
        "linear-gradient(to left, #ff9a44, #ff5c4d)", // Orange to Coral
        "linear-gradient(to left, #a076f9, #6851f6)", // Soft Purple to Vibrant Purple
        "linear-gradient(to left, #00d2ff, #3a7bd5)", // Light Blue to Deeper Blue
        "linear-gradient(to left, #f8cdda, #ea8fbc)", // Pinkish
        "linear-gradient(to left, #43e97b, #38f9d7)", // Green to Teal
        "linear-gradient(to left, #ffb74d, #ff9800)"  // Amber to Orange
    };
    int colorIndex = 0;
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* Copied styles from your last version of Admin/Index.cshtml for consistency */
        /* and merged with some elements from the "surprise me" version */
        :root {
            /* Using one of the gradient sets from your examples */
            --gradient-start: #fa9e1b; /* Orange */
            --gradient-end: #8d4fff; /* Purple */
            --admin-text-dark-dash: #2c3e50;
            --admin-text-light-dash: #f8f9fa;
            --admin-card-bg-dash: #ffffff;
            --admin-card-shadow-dash: 0 5px 20px rgba(0, 0, 0, 0.05);
            --admin-border-radius-dash: 10px;
        }

        .admin-dashboard-body .admin-main-container {
            padding: 1.5rem;
        }

        .dashboard-header-minimal { /* New class for the simplified header */
            background: linear-gradient(120deg, #222831 0%, #393e46 100%); /* Dark, sophisticated gradient */
            padding: 2rem 0; /* Adjusted padding */
            margin-bottom: 2.5rem;
            border-radius: var(--admin-border-radius-dash); /* Using dashboard radius */
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
            text-align: center; /* Center the title */
        }

            .dashboard-header-minimal::before { /* Subtle overlay pattern or texture if desired */
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                /* Example: background-image: url('/images/patterns/subtle-noise.png'); */
                /* opacity: 0.05; */
                pointer-events: none;
            }

        .section-title-main { /* Renamed to avoid conflict if .section-title is used elsewhere */
            font-family: 'Poppins', sans-serif; /* Using Poppins for main title */
            font-size: 2.75rem; /* Large and impactful */
            font-weight: 700;
            color: #ffffff; /* White text on dark background */
            text-transform: uppercase;
            letter-spacing: 2px; /* Wider spacing */
            margin: 0;
            position: relative; /* For z-index if ::before is used heavily */
            z-index: 1;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3); /* Subtle text shadow */
        }


        .admin-section-card { /* Reverting to one of your preferred card styles */
            border-radius: 1rem; /* From your second example */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            border: none;
            background: #fff;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
            transform: translateY(0);
        }

            .admin-section-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

        .admin-section-header {
            padding: 1.5rem;
            /* Gradient applied inline */
            color: #fff;
            border-radius: 1rem 1rem 0 0;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            font-family: 'Poppins', sans-serif;
        }

            .admin-section-header:hover {
                filter: brightness(1.1);
            }


        .icon-container { /* Using the icon container style from your second version */
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            width: 3.5rem;
            height: 3.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
        }

        .admin-section-header:hover .icon-container {
            transform: scale(1.1);
        }

        .icon-container i {
            font-size: 1.5rem;
            color: #fff;
        }

        .admin-section-header h5 {
            margin-bottom: 0;
            font-size: 1.15rem;
        }

        .admin-section-content {
            background: #ffffff; /* Your first version had #f8fafc for content */
            border-radius: 0 0 1rem 1rem;
            padding: 2rem;
            border: 1px solid #eef2f7; /* Lighter border */
            border-top: none;
        }

        .btn-view-all, .btn-add-new { /* Using button style from your second version */
            font-family: 'Poppins', sans-serif; /* Changed to Poppins */
            font-size: 0.8rem; /* Slightly smaller for a sleeker look */
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            padding: 0.7rem 1.4rem;
            border-radius: 0.75rem; /* Consistent with card roundness */
            transition: all 0.25s ease-out;
            min-width: 170px; /* Ensure buttons have a nice width */
            text-align: center;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-view-all i, .btn-add-new i {
                margin-right: 0.5rem;
            }


        .btn-view-all { /* From your second version with slight tweaks */
            background: #fff;
            color: #5e72e4; /* Primary action color */
            border: 2px solid #5e72e4;
            box-shadow: 0 2px 5px rgba(94, 114, 228, 0.1);
        }

            .btn-view-all:hover {
                background: #5e72e4;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(94, 114, 228, 0.3);
            }

        .btn-add-new { /* From your second version with slight tweaks */
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); /* Green gradient */
            color: #fff;
            border: none;
            box-shadow: 0 2px 5px rgba(56, 249, 215, 0.2);
        }

            .btn-add-new:hover {
                background: linear-gradient(135deg, #38f9d7 0%, #43e97b 100%);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(56, 249, 215, 0.4);
            }

        .section-description { /* From your first version */
            font-family: 'Open Sans', sans-serif;
            color: #5a6f82; /* Softer grey */
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 1.5rem; /* More space before buttons */
        }

        .toggle-icon i {
            transition: transform 0.3s ease;
            font-size: 1rem; /* Standardized toggle icon size */
        }
    </style>
}

<!-- Dashboard Header - Simplified -->
<div class="dashboard-header-minimal">
    <h1 class="section-title-main">Management Console</h1>
</div>

@* The welcoming paragraph that was below the old header bar can be removed or kept based on preference. *@
@* I'm removing it for a cleaner look, as the main title serves as the welcome. *@
@*
<p class="section-description text-center mb-4">
    Welcome, <strong>@(Model?.UserName ?? User.Identity?.Name ?? "Administrator")</strong>!
    Select a category below to manage its content.
</p>
*@

<div class="accordion mt-4" id="adminEntityAccordion">
    @* Added mt-4 for spacing after header *@
    @foreach (var entity in entityTypes)
    {
        var currentGradient = gradientColors[colorIndex % gradientColors.Count];
        colorIndex++;

        <div class="admin-section-card">
            <div class="admin-section-header collapsed"
                 style="background: @currentGradient;" @* Dynamic gradient from right to left *@
                 data-bs-toggle="collapse"
                 data-bs-target="#@entity.TargetId"
                 aria-expanded="false"
                 aria-controls="@entity.TargetId">
                <div class="d-flex align-items-center">
                    <div class="icon-container">
                        <i class="fa @entity.IconClass"></i>
                    </div>
                    <h5 class="mb-0 text-capitalize">Manage @entity.Title</h5>
                    @* Removed count display from here *@
                </div>
                <span class="toggle-icon">
                    <i class="fa fa-chevron-down"></i>
                </span>
            </div>
            <div id="@entity.TargetId"
                 class="collapse admin-section-content"
                 data-bs-parent="#adminEntityAccordion">
                <p class="section-description mb-4">
                    Manage all <strong>@entity.Title</strong>. View, add, edit, or delete entries with ease.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    @* Added flex-wrap for responsiveness *@
                    <a asp-controller="@entity.ControllerName"
                       asp-action="Index"
                       class="btn btn-view-all">
                        <i class="fa fa-list"></i>View All @entity.Title
                        @* Removed count badge from button *@
                    </a>
                    <a asp-controller="@entity.ControllerName"
                       asp-action="Create"
                       class="btn btn-add-new">
                        <i class="fa fa-plus"></i>Add New @entity.Title
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Accordion icon toggle logic (using Bootstrap events for reliability)
            $('.admin-section-content.collapse').on('show.bs.collapse', function () {
                $(this).prev('.admin-section-header').find('.toggle-icon i')
                    .removeClass('fa-chevron-down').addClass('fa-chevron-up');
            }).on('hide.bs.collapse', function () {
                $(this).prev('.admin-section-header').find('.toggle-icon i')
                    .removeClass('fa-chevron-up').addClass('fa-chevron-down');
            });

            // Ensure icons are correct on page load for any pre-expanded sections
            $('.admin-section-header:not(.collapsed)[aria-expanded="true"]').find('.toggle-icon i')
                .removeClass('fa-chevron-down').addClass('fa-chevron-up');

            // Keyboard accessibility for accordion headers
            $('.admin-section-header').on('keypress', function (e) {
                if (e.which === 13 || e.which === 32) { // Enter or Space key
                    e.preventDefault();
                    $(this).click(); // Trigger the click event which toggles collapse
                }
            }).attr({
                'role': 'button',
                'tabindex': '0' // Make them focusable
            });
        });
    </script>
}