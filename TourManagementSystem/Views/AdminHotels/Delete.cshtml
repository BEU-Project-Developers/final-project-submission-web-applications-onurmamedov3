@model TourManagementSystem.Models.Hotel
@{
    ViewData["Title"] = "Confirm Delete Hotel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Assuming common styles are in _AdminLayout.cshtml or global admin.css *@
@* If not, you'd add an @section Styles here for .form-actions-custom, .btn-form-danger, etc. *@

<nav aria-label="breadcrumb" class="breadcrumb-admin-custom">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Hotels</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Confirmation</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2 class="form-title-custom"><i class="fa fa-trash text-danger"></i> Delete Hotel Confirmation</h2>

    <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>Are you sure?</h4>
        <p>You are about to permanently delete the hotel: <strong>@Model.Name</strong>. This action cannot be undone.</p>
    </div>

    <div class="mt-4">
        <h4 class="mb-3">Hotel Details:</h4>
        <dl class="row">
            <dt class="col-sm-4 col-md-3">Name:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4 col-md-3">Destination:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Destination)</dd>

            <dt class="col-sm-4 col-md-3">Price per Night:</dt>
            <dd class="col-sm-8 col-md-9">@Model.PricePerNight.ToString("C")</dd>

            <dt class="col-sm-4 col-md-3">Rating:</dt>
            <dd class="col-sm-8 col-md-9">@Model.Rating stars</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-actions-custom">
                <a asp-action="Index" class="btn btn-form-action btn-form-secondary">Cancel</a>
                <button type="submit" class="btn btn-form-action btn-form-danger">
                    <i class="fa fa-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>