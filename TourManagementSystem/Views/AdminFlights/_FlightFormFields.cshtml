@model TourManagementSystem.Models.AdminFlightViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

@if (Model.Id != 0)
{
    <input type="hidden" asp-for="Id" />
}

<fieldset class="mb-4">
    <legend class="form-legend">Flight Identification</legend>
    <div class="row g-3">
        <div class="col-md-8">
            <label asp-for="Airline" class="form-label">Airline Name</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-plane"></i></span>
                <input asp-for="Airline" class="form-control admin-form-control" placeholder="e.g., VoyageAir" />
            </div>
            <span asp-validation-for="Airline" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="FlightNumber" class="form-label">Flight Number</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-hashtag"></i></span>
                <input asp-for="FlightNumber" class="form-control admin-form-control" placeholder="e.g., VA205" />
            </div>
            <span asp-validation-for="FlightNumber" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset class="mb-4">
    <legend class="form-legend">Route & Schedule</legend>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="DepartureCity" class="form-label">Departure City</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-map-pin"></i></span>
                <input asp-for="DepartureCity" class="form-control admin-form-control" placeholder="e.g., London (LHR)" />
            </div>
            <span asp-validation-for="DepartureCity" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalCity" class="form-label">Arrival City</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-map-pin"></i></span>
                <input asp-for="ArrivalCity" class="form-control admin-form-control" placeholder="e.g., New York (JFK)" />
            </div>
            <span asp-validation-for="ArrivalCity" class="text-danger d-block mt-1"></span>
        </div>
    </div>

    <div class="row g-3 mt-3">
        @* mt-3 for spacing *@
        <div class="col-md-6">
            <label asp-for="DepartureTime" class="form-label">Departure Date & Time</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-calendar-o"></i></span>
                <input asp-for="DepartureTime" class="form-control admin-form-control" type="datetime-local" />
            </div>
            <span asp-validation-for="DepartureTime" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ArrivalTime" class="form-label">Arrival Date & Time</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-calendar-check-o"></i></span>
                <input asp-for="ArrivalTime" class="form-control admin-form-control" type="datetime-local" />
            </div>
            <span asp-validation-for="ArrivalTime" class="text-danger d-block mt-1"></span>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend class="form-legend">Pricing & Management</legend>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Ticket Price</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-eur"></i></span> @* Or your currency icon *@
                <input asp-for="Price" class="form-control admin-form-control" type="number" step="0.01" min="0" />
            </div>
            <span asp-validation-for="Price" class="text-danger d-block mt-1"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="UserId" class="form-label">User ID (Optional)</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-user-plus"></i></span>
                <input asp-for="UserId" type="number" class="form-control admin-form-control" placeholder="Leave blank if not assigned" />
            </div>
            <span asp-validation-for="UserId" class="text-danger d-block mt-1"></span>
        </div>
    </div>
    <div class="mt-3">
        <label asp-for="AirlineLogoUrl" class="form-label">Airline Logo URL (Optional)</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa fa-picture-o"></i></span>
            <input asp-for="AirlineLogoUrl" class="form-control admin-form-control" placeholder="e.g., /images/airlines/va-logo.png or http://..." />
        </div>
        <span asp-validation-for="AirlineLogoUrl" class="text-danger d-block mt-1"></span>
    </div>
</fieldset>