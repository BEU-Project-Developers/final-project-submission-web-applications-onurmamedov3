@model TourManagementSystem.Models.AdminFlightViewModel
@{
    ViewData["Title"] = "Edit Flight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Assuming common styles are global *@

<nav aria-label="breadcrumb" class="breadcrumb-admin-custom">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Flights</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit: @Model.Airline @Model.FlightNumber</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2 class="form-title-custom">
        <i class="fa fa-pencil-square-o"></i> Edit Flight: @Model.Airline @Model.FlightNumber
    </h2>

    <form asp-action="Edit" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <partial name="_FlightFormFields" model="Model" />

        <div class="form-actions-custom">
            <a asp-action="Index" class="btn btn-form-action btn-form-secondary">Cancel</a>
            <button type="submit" class="btn btn-form-action btn-form-primary">
                <i class="fa fa-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}