@* File: Views/AdminFlights/Details.cshtml *@
@model TourManagementSystem.Models.AdminFlightViewModel
@{
    ViewData["Title"] = "Flight Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var defaultFlightImage = Url.Content("~/images/default_flight.png");
}
<nav aria-label="breadcrumb" class="breadcrumb-admin">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Flights</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details: @Model.Airline @Model.FlightNumber</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2><i class="fa fa-info-circle"></i> Details: @Model.Airline @Model.FlightNumber</h2>
    <hr />
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.AirlineLogoUrl))
                {
                    <img src="@Url.Content(Model.AirlineLogoUrl)" alt="@Model.Airline Logo" class="img-fluid rounded shadow-sm mb-3" style="max-height: 150px; width:auto;" />
                }
                else
                {
                    <img src="@defaultFlightImage" alt="Default Flight Image" class="img-fluid rounded shadow-sm mb-3" style="max-height: 150px; width:auto;" />
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Airline:</dt>
                    <dd class="col-sm-8">@Model.Airline</dd>
                    <dt class="col-sm-4">Flight No.:</dt>
                    <dd class="col-sm-8">@Model.FlightNumber</dd>
                    <dt class="col-sm-4">Departure City:</dt>
                    <dd class="col-sm-8">@Model.DepartureCity</dd>
                    <dt class="col-sm-4">Arrival City:</dt>
                    <dd class="col-sm-8">@Model.ArrivalCity</dd>
                    <dt class="col-sm-4">Departure Time:</dt>
                    <dd class="col-sm-8">@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</dd>
                    <dt class="col-sm-4">Arrival Time:</dt>
                    <dd class="col-sm-8">@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</dd>
                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                    <dt class="col-sm-4">User ID:</dt>
                    <dd class="col-sm-8">@(Model.UserId.HasValue ? Model.UserId.ToString() : "N/A")</dd>
                </dl>
            </div>
        </div>
        <hr />
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
        </div>
    }
    else
    {
        <p class="text-danger">Flight details not found.</p>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    }
</div>