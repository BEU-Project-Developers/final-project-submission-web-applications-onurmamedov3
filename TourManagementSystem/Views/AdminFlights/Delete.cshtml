@model TourManagementSystem.Models.Flight
@{
    ViewData["Title"] = "Confirm Delete Flight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Assuming common styles are global *@

<nav aria-label="breadcrumb" class="breadcrumb-admin-custom">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Manage Flights</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Confirmation</li>
    </ol>
</nav>

<div class="admin-form-container">
    <h2 class="form-title-custom"><i class="fa fa-trash text-danger"></i> Delete Flight Confirmation</h2>

    <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading"><i class="fa fa-exclamation-triangle me-2"></i>Are you sure?</h4>
        <p>You are about to permanently delete the flight: <strong>@Model.Airline @Model.FlightNumber</strong>. This action cannot be undone.</p>
    </div>

    <div class="mt-4">
        <h4 class="mb-3">Flight Details:</h4>
        <dl class="row dl-horizontal-custom">
            <dt class="col-sm-4 col-md-3">Airline:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Airline)</dd>

            <dt class="col-sm-4 col-md-3">Flight Number:</dt>
            <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.FlightNumber)</dd>

            <dt class="col-sm-4 col-md-3">Route:</dt>
            <dd class="col-sm-8 col-md-9">@Model.DepartureCity to @Model.ArrivalCity</dd>

            <dt class="col-sm-4 col-md-3">Departure Time:</dt>
            <dd class="col-sm-8 col-md-9">@Model.DepartureTime.ToString("g")</dd>

            <dt class="col-sm-4 col-md-3">Price:</dt>
            <dd class="col-sm-8 col-md-9">@Model.Price.ToString("C")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-actions-custom">
                <a asp-action="Index" class="btn btn-form-action btn-form-secondary">Cancel</a>
                <button type="submit" class="btn btn-form-action btn-form-danger">
                    <i class="fa fa-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>